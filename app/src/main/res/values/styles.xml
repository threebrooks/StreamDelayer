<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/fontPrimary</item>
        <item name="android:editTextColor">@color/fontPrimary</item>
        <item name="android:textSize">20dip</item>
        <item name="colorButtonNormal">@color/fontPrimary</item>
        <item name="android:colorButtonNormal">@color/fontPrimary</item>
        <item name="android:background">@color/materialDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
       <!-- <item name="android:background">@color/l2Whiten</item> -->
    </style>
   <!--  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" /> -->

    <style name="Divider">
        <item name="android:background">@color/fontPrimary</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
