<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/fontPrimary</item>
        <item name="android:editTextColor">@color/fontPrimary</item>
        <item name="android:textSize">20dip</item>
        <item name="colorButtonNormal">@color/fontPrimary</item>
        <item name="android:colorButtonNormal">@color/fontPrimary</item>
        <item name="android:background">@color/materialDark</item>
