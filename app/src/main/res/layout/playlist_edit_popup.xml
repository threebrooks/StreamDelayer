<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playlistItemEditLL"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/button_row_gap"
    android:layout_marginRight="@dimen/button_row_gap">
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_row_gap" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/l2Whiten">
    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name:"/>
    <EditText
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:singleLine="true"
        android:id="@+id/playlistItemEditName"
        android:background="@color/l2Whiten"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_row_gap" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/l2Whiten">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="URL:"/>
        <EditText
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:singleLine="true"
            android:id="@+id/playlistItemEditURL"
            android:background="@color/l2Whiten"/>
    </LinearLayout>

</LinearLayout>